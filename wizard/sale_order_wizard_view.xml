<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_wizard_form" model="ir.ui.view">
        <field name="name">view.sale.wizard.form</field>
        <field name="model">sale.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="expiration_date"/>
                </group>
            </form>
            <notebook>
                <page string="Order Info">
                    <field name="order_ids">
                            <tree editable="bottom">
                                <field name="product_id_1"/>
                                <field name="description"/>
                                <field name="quantity"/>
                                <field name="unit_price"/>
                            </tree>
                    </field>
                </page>
            </notebook>
            <form>
                <footer>
                    <button name="update_detail" string="Add Details" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="order_wizard_action_record" model="ir.actions.act_window">
        <field name="name">Add Order Details</field>
        <field name="res_model">sale.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_sale_wizard_form"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_view_types">form</field>
    </record>


</odoo>